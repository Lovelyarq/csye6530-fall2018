from labs.common import ActuatorData
AcData = ActuatorData.ActuatorData()

class TempActuatorEmulator(): 
    
    Data = AcData
    Data.setCommand(0)
    Data.setValue(0)
    Data.setErrorCode(0)
    Data.setStateData(0)
    Data.setStatusCode(0)
    
    def __init__(self):
        '''
        nothing
        '''
    
        
    def processMessage(self, value):
        self.value = value
        if (value == 0):
            {}
        elif (value > 0):
            {}
        else:
            {}
            
            
        self.Data.setValue(self.value)
        AcData.updateData(self.Data)
   


















